<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SelectorListView">
        <attr name="sl_background_color" format="color" />

        <attr name="sl_show_title" format="boolean" />
        <attr name="sl_title_size" format="dimension" />
        <attr name="sl_title_color" format="color" />
        <attr name="sl_title_text" format="string" />

        <attr name="sl_show_empty_list_text" format="boolean" />
        <attr name="sl_empty_list_text" format="string" />

        <attr name="sl_list_item_insertion_order" format="enum">
            <enum name="beginning" value="0" />
            <enum name="end" value="1" />
            <enum name="original" value="2" />
        </attr>
        <attr name="sl_scroll_to_inserted_list_item" format="boolean" />
        <attr name="sl_show_list_item_animation" format="boolean" />

        <attr name="sl_show_list_item_divider" format="boolean" />
        <attr name="sl_list_item_divider_height" format="dimension" />
        <attr name="sl_list_item_divider_color" format="color" />

        <attr name="sl_list_item_image_size" format="dimension" />

        <attr name="sl_list_item_primary_text_size" format="dimension" />
        <attr name="sl_list_item_primary_text_color" format="color" />

        <attr name="sl_list_item_secondary_text_size" format="dimension" />
        <attr name="sl_list_item_secondary_text_color" format="color" />
    </declare-styleable>
</resources>